[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    */migrations/*,
    node_modules,
    frontend
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py:F401
    # Allow longer lines in settings files
    */settings*.py:E501
    # Allow unused variables in test files (they're often needed for setup)
    */tests/*.py:F841